pipeline {
    agent any

        options {
            timeout(time: 80, unit: 'MINUTES')
        }

        stages {

            stage ('Compile project') {
                steps {
                    withMaven(maven: 'Maven3') {
                        sh ' mvn -f pom.xml clean install'
                            sh 'mvn clean install'
                    }
                }
        }

        stage('Clean project') {
            steps {
                withMaven(maven: 'Maven3') {
                    sh "mvn clean"
                }
            }
        }

        stage('Run jUnit tests') {
            steps {
                withMaven(maven: 'Maven3') {
                    sh "mvn test"
                }
            }
        }
    }
}